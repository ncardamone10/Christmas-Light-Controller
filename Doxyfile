# Doxyfile configuration for Arduino .ino files

# Project related configuration options
PROJECT_NAME           = "Your Project Name"
PROJECT_BRIEF          = "Your Project Brief Description"
PROJECT_NUMBER         = 1.0
OUTPUT_DIRECTORY       = "./Doxygen Output"

# If you want to create documentation for internal members
EXTRACT_ALL            = YES

# If you want to include private members in documentation
EXTRACT_PRIVATE        = YES

# If you want to include static members in documentation
EXTRACT_STATIC         = YES

# If you want to include protected members in documentation
EXTRACT_PROTECTED      = YES

# Source browser options
SOURCE_BROWSER         = YES
INLINE_SOURCES         = YES

# Directory related options
INPUT                  = ./
FILE_PATTERNS          = *.ino
RECURSIVE              = YES

# Enable preprocessing
ENABLE_PREPROCESSING   = YES
MACRO_EXPANSION        = YES
EXPAND_ONLY_PREDEF     = NO
PREDEFINED             = "__cplusplus"

# Output formats
GENERATE_HTML          = YES
HTML_OUTPUT            = html

# If you want to generate LaTeX output
GENERATE_LATEX         = NO

# If you want to generate man pages
GENERATE_MAN           = NO

# Graph related options (requires Graphviz)
HAVE_DOT               = YES
CALL_GRAPH             = YES
CALLER_GRAPH           = YES

# Other options
ALPHABETICAL_INDEX     = YES
COLS_IN_ALPHA_INDEX    = 5
